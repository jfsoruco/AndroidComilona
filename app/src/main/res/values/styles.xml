<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="LargeFont">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LargeBlueFont" parent="@style/LargeFont">
        <item name="android:textColor">#00007f</item>
    </style>

    <style name="CustomText" >
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#008</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:capitalize">characters</item>
        <item name="android:typeface">monospace</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textSize" >5pt</item>
        <item name="android:background">#700013ff</item>
        <item name="android:shadowColor" >#700013ff</item>
    </style>

    <color name="primary">#F44336</color>
    <color name="primary_dark">#D32F2F</color>
    <color name="primary_light">#FFCDD2</color>
    <color name="accent">#03A9F4</color>
    <color name="primary_text">#212121</color>
    <color name="secondary_text">#727272</color>
    <color name="icons">#FFFFFF</color>
    <color name="divider">#B6B6B6</color>

</resources>
